{
  "compilerOptions": {
    /* Bundler mode */
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",

    /* Import Settings */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.test.*"]
}
